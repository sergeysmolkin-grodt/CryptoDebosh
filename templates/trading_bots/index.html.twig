{# templates/trading_bots/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Trading Bots{% endblock %}

{% block body %}
    <header class="header navbar-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="nav-inner">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand" href="{{ path('homepage') }}">
                                <img src="{{ asset('build/images/logo/white-logo.svg') }}" alt="Logo">
                            </a>
                            <button class="navbar-toggler mobile-menu-btn" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a href="{{ path('homepage') }}" aria-label="Toggle navigation">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('trading-bots') }}" class="active" aria-label="Toggle navigation">Trading Bots</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="button">
                                <a href="#" class="btn">Get started</a>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <section class="hero-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <h1 class="text-center">Trading Bots</h1>
                    <p class="text-center">Here you can find information about our trading bots...</p>

                    <div class="bot-section">
                        <h2>Spot Bots</h2>
                        <form id="spot-bot-form">
                            <div>
                                <label for="spot-symbol">Symbol:</label>
                                <input type="text" id="spot-symbol" name="symbol" required>
                            </div>
                            <div>
                                <label for="spot-investment">Investment:</label>
                                <input type="number" id="spot-investment" name="investment" required>
                            </div>
                            <button type="submit">Run Spot Bot</button>
                        </form>
                    </div>

                    <div class="bot-section">
                        <h2>Futures Bots</h2>
                        <form id="futures-bot-form">
                            <div>
                                <label for="futures-symbol">Symbol:</label>
                                <input type="text" id="futures-symbol" name="symbol" required>
                            </div>
                            <div>
                                <label for="futures-investment">Investment:</label>
                                <input type="number" id="futures-investment" name="investment" required>
                            </div>
                            <button type="submit">Run Futures Bot</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
